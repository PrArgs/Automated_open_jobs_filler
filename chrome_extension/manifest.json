{
  "manifest_version": 3,
  "name": "Job URL Saver",
  "version": "1.0",
  "description": "Save job URLs to Google Sheet.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:5000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
